{
  "name": "mcp-kb-monorepo",
  "version": "0.1.0",
  "description": "Local multimodal knowledge base + MCP services (bun + TypeScript)",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run scripts/dev-all.ts",
    "smoke:api": "bun run scripts/api-smoke.ts",
    "web": "bun --cwd apps/web x vite dev --host 0.0.0.0 --port 5173",
    "test": "bun test",
    "lint": "bunx eslint ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "clsx": "^2.1.0",
    "zod": "^3.23.8",
    "@xenova/transformers": "^2.6.1",
    "kysely": "^0.27.2",
    "adm-zip": "^0.5.12",
    "@napi-rs/canvas": "^0.1.51",
    "pdfjs-dist": "^4.10.38",
    "openai": "^4.77.0"
  },
  "module": "index.ts",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "vitest": "^1.2.0",
    "tailwindcss": "^3.4.14",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.20"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
