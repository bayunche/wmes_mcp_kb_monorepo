{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@kb/*": ["packages/*/src"],
      "@apps/*": ["apps/*/src"]
    }
  },
  "include": ["apps", "packages", "scripts", "tests"],
  "exclude": ["node_modules", "dist"]
}
